/* toparticle styles */
.toparticle {
  padding: 0rem;
}

.toparticle > ul {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  grid-gap: 5px;
}

.toparticle > ul > li {
  border: 1px solid #E2E2E2;
  border-radius: .5rem;
}

.toparticle > ul > li > figure {
  max-height: 300px;
  overflow: hidden;
  border-top-left-radius: .5rem;
  border-top-right-radius: .5rem;
  position: relative;
}

.toparticle > ul > li > figure > img {
  width: 100%;
}

.toparticle > ul > li > figure > figcaption {
  position: absolute;
  bottom: 0;
  background-color: rgba(0,0,0,.7);
  width: 100%;
}

.toparticle > ul > li > figure > figcaption > h3 {
  color: white;
  padding: .75rem;
  font-size: 1.25rem;
}

.toparticle > ul > li > p {
  font-size: 1rem;
  line-height: 1.5;
  padding: 0.5rem;
  color: #666666;
}

.toparticle > ul > li > a {
  padding: .5rem 1rem;
  margin: .5rem;
}

/* footer */
footer {
  background-color: #333;
  padding: .75rem;
  color: white;
  text-align: center;
  font-size: .75rem;
}




